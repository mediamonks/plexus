{
	"name": "plexus",
	"version": "1.2.0",
	"description": "Plexus Agentic Engine",
	"main": "index.js",
	"scripts": {
		"auth": "bash tools/auth.sh",
		"build": "tsc",
		"start": "npm run build && functions-framework --target=api --source=. --port=8080",
		"test": "node -r ts-node/register test.ts",
		"deploy": "npm run generate-openapi --env=$npm_config_env; node tools/deploy.cjs --env=$npm_config_env",
		"deploy:functions": "node tools/deploy.cjs --env=$npm_config_env --functions",
		"deploy:dev": "npm run deploy --env=dev",
		"deploy:dev:functions": "npm run deploy:functions --env=dev",
		"deploy:dev:data": "gsutil -m cp -r data/instructions/* gs://monks-plexus/instructions",
		"deploy:stg": "npm run deploy --env=stg",
		"deploy:stg:functions": "npm run deploy:functions --env=stg",
		"generate-openapi": "node tools/generate-openapi.js $npm_config_env gateway > config/openapi.yaml; node tools/generate-openapi.js $npm_config_env > public/openapi.yaml"
	},
	"author": "",
	"license": "ISC",
	"engines": {
		"node": "20"
	},
	"dependencies": {
		"@azure/msal-node": "^2.6.0",
		"@google-cloud/aiplatform": "^3.34.0",
		"@google-cloud/firestore": "^7.11.0",
		"@google-cloud/functions-framework": "^3.4.5",
		"@google-cloud/storage": "^7.15.2",
		"@google-cloud/tasks": "^5.5.2",
		"@google-cloud/vertexai": "^1.9.3",
		"@google/genai": "^1.16.0",
		"@lancedb/lancedb": "^0.16.0",
		"@langchain/core": "^0.3.72",
		"dotenv": "^16.4.7",
		"google-auth-library": "^10.2.1",
		"googleapis": "^152.0.0",
		"langchain": "^0.3.19",
		"marked": "^16.1.1",
		"mime-types": "^2.1.35",
		"open": "^10.1.2",
		"openai": "^4.82.0",
		"pdf-parse": "1.1.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.5",
		"turndown": "^7.2.0",
		"typescript": "^5.9.2",
		"uuid": "^11.1.0",
		"xlsx": "^0.18.5"
	},
	"devDependencies": {
		"@google-cloud/secret-manager": "^6.0.1",
		"express": "^4.21.2",
		"minimist": "^1.2.8",
		"yaml": "^2.7.0"
	},
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "CommonJS",
			"moduleResolution": "node"
		}
	}
}
